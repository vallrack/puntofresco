rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function getRole() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }
    
    function isVendedor() {
      return isAuthenticated() && getRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÃ“N ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAdmin();
      allow update, delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() && request.resource.data.creadoPor == request.auth.uid && request.resource.data.actualizadoPor == request.auth.uid && request.resource.data.fechaCreacion == request.time && request.resource.data.fechaActualizacion == request.time;
      // Vendedores pueden actualizar solo el stock.
      // Admins pueden actualizar cualquier campo.
      allow update: if (isVendedor() && request.resource.data.stock != resource.data.stock && request.resource.data.keys().removeAll(['stock']).size() == 0) || (isAdmin() && request.resource.data.actualizadoPor == request.auth.uid && request.resource.data.fechaActualizacion == request.time);
      allow delete: if isAdmin();
    }

    match /ventas/{ventaId} {
      allow read: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid && request.resource.data.fecha == request.time;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
  }
}
