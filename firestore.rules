rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Obtener los datos del usuario actual de forma segura
    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isAuthenticated() && (
        getUserData().rol == 'super_admin' || 
        request.auth.token.email == 'vallrack67@gmail.com'
      );
    }

    function isAdmin() {
      return isAuthenticated() && (
        getUserData().rol == 'admin' || 
        isSuperAdmin()
      );
    }
    
    function isVendedor() {
      return isAuthenticated() && getUserData().rol == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    match /usuarios/{userId} {
      // 1. Cualquiera puede leer su propio perfil, Super Admin lee todos.
      allow read: if isSuperAdmin() || (isAuthenticated() && isOwner(userId));
      
      // 2. Creación: Solo Super Admin puede crear usuarios.
      allow create: if isSuperAdmin();

      // 3. Edición: 
      // - El Super Admin puede cambiar TODO (incluyendo roles).
      // - El usuario puede cambiar sus datos (nombre, foto), PERO NO su rol.
      allow update: if isSuperAdmin() || (
        isAuthenticated() && isOwner(userId) && 
        request.resource.data.rol == resource.data.rol
      );

      allow delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      // Admins pueden editar todo. Vendedores pueden actualizar (para el stock en ventas).
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      // Admins/SuperAdmins pueden ver todo.
      // Vendedores solo pueden ver sus propias ventas.
      allow get: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      allow list: if isAdmin() || (isVendedor() && request.query.where[0][2] == request.auth.uid);
      // Cualquiera autenticado puede crear una venta si es para sí mismo.
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      allow read, list: if isAdmin() || (isVendedor() && request.query.where[0][2] == request.auth.uid);
      allow create: if isAdmin() || isVendedor();
      // No se permite modificar ni borrar para mantener la integridad.
      allow update, delete: if false; 
    }
  }
}
