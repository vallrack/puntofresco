rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Obtener los datos del usuario actual de forma segura
    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isAuthenticated() && (
        getUserData().rol == 'super_admin' || 
        request.auth.token.email == 'vallrack67@gmail.com'
      );
    }

    function isAdmin() {
      return isAuthenticated() && (
        getUserData().rol == 'admin' || 
        isSuperAdmin()
      );
    }
    
    function isVendedor() {
      return isAuthenticated() && getUserData().rol == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    match /usuarios/{userId} {
      // 1. Lectura: Super Admin lee todos. Usuarios autenticados leen su propio perfil.
      allow read: if isSuperAdmin() || (isAuthenticated() && isOwner(userId));
      
      // 2. Creación: 
      // - Un usuario recién registrado puede crear SU PROPIO documento.
      // - RESTRICCIÓN: No puede asignarse un rol a sí mismo en la creación.
      // - Un super_admin puede crear usuarios (usado en el dashboard).
      allow create: if (isAuthenticated() && isOwner(userId) && !('rol' in request.resource.data)) || isSuperAdmin();

      // 3. Edición: 
      // - El Super Admin puede cambiar TODO (incluyendo roles).
      // - El usuario puede cambiar sus datos, PERO NO su rol.
      allow update: if isSuperAdmin() || 
                     (isAuthenticated() && isOwner(userId) && request.resource.data.rol == resource.data.rol);

      // 4. Borrado: Solo Super Admin puede borrar.
      allow delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      // Admins pueden editar todo. Vendedores pueden actualizar (para el stock en ventas).
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      // Admins/SuperAdmins pueden ver documentos individuales.
      // Vendedores solo pueden ver sus propias ventas.
      allow get: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      // Los Admins pueden listar todo. Los vendedores solo pueden leer sus propias ventas.
      // La seguridad de la consulta de lista se aplica en el código de la app.
      allow list: if isAdmin();
      // Cualquiera autenticado puede crear una venta si es para sí mismo.
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      // Los Admins/SuperAdmins pueden obtener cualquier registro de merma.
      // Los vendedores solo pueden obtener las mermas que ellos mismos registraron.
      allow get: if isAdmin() || (isVendedor() && resource.data.registradoPor == request.auth.uid);
      // Los Admins pueden listar todas las mermas.
      // La seguridad para que los vendedores solo listen sus mermas se aplica en el código de la app.
      allow list: if isAdmin();
      // Solo usuarios autenticados (vendedores/admins) pueden crear mermas.
      allow create: if isAuthenticated();
      // No se permite modificar ni borrar para mantener la integridad de los registros.
      allow update, delete: if false; 
    }
  }
}
