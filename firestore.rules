rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    // Verifica si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Obtiene el rol del usuario actual desde la colección 'usuarios'
    function getRole() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    // Funciones específicas por rol
    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }
    
    function isVendedor() {
      return isAuthenticated() && getRole() == 'vendedor';
    }

    // --- REGLAS POR COLECCIÓN ---

    // Colección de Usuarios: 
    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      // Solo un Admin o Super Admin pueden crear usuarios.
      allow create: if isAdmin();
      // Solo un Super Admin puede actualizar o eliminar perfiles.
      allow update, delete: if isSuperAdmin();
    }

    // Colección de Productos e Inventario
    match /productos/{productoId} {
      // Vendedores pueden leer para consultar stock
      allow read: if isAuthenticated();
      // Admins y Super Admins pueden crear, modificar stock, precios, etc.
      allow create: if isAdmin() && request.resource.data.creadoPor == request.auth.uid && request.resource.data.actualizadoPor == request.auth.uid && request.resource.data.fechaCreacion == request.time && request.resource.data.fechaActualizacion == request.time;
      allow update: if isAdmin() && request.resource.data.actualizadoPor == request.auth.uid && request.resource.data.fechaActualizacion == request.time;
      allow delete: if isAdmin();
    }

    // Colección de Ventas
    match /ventas/{ventaId} {
      // Admins pueden ver todas las ventas, vendedores solo las suyas.
      allow read: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      // Cualquier usuario autenticado puede crear una venta, pero debe registrarse como el vendedor.
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid && request.resource.data.fecha == request.time;
      // Solo Admins pueden anular o editar ventas
      allow update, delete: if isAdmin();
    }

    // Colección de Compras y Gastos
    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    // Reportes Financieros
    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
  }
}
