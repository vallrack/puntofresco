rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    // Verifica si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Obtiene el rol del usuario actual desde la colección 'usuarios'
    function getRole() {
      // Si el documento no existe, no se puede obtener el rol.
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    // Funciones específicas por rol
    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }

    // --- REGLAS POR COLECCIÓN ---

    // Colección de Usuarios: 
    // - Un usuario puede leer su propio perfil.
    // - Solo un Admin o Super Admin pueden crear, actualizar o eliminar perfiles.
    // - Hay una excepción para que el primer Super Admin pueda crear su propio perfil.
    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAdmin() || (request.auth.uid == userId && request.resource.data.rol == 'super_admin');
      allow update, delete: if isSuperAdmin();
    }

    // Colección de Productos e Inventario
    match /productos/{productoId} {
      allow read: if isAuthenticated();
      // Solo Admins o Super Admins pueden modificar stock manual, precios o crear productos
      allow write: if isAdmin();
    }

    // Colección de Ventas
    match /ventas/{ventaId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Todos pueden vender
      allow update, delete: if isAdmin(); // Solo cargos altos pueden anular o editar ventas
    }

    // Colección de Compras y Gastos
    match /compras/{compraId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Reportes Financieros (Ganancias, Pérdidas, Balances)
    