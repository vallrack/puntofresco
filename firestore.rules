rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/usuarios/$(userId)).data;
    }
    
    // Función para verificar el rol del usuario que realiza la petición
    function getRequestingUserRole() {
        return getUserData(request.auth.uid).rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && (getRequestingUserRole() == 'super_admin' || request.auth.token.email == 'vallrack67@gmail.com');
    }

    function isAdmin() {
      return isAuthenticated() && (getRequestingUserRole() == 'admin' || isSuperAdmin());
    }
    
    function isVendedor() {
      return isAuthenticated() && getRequestingUserRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      // Un usuario nuevo se puede registrar (crear su propio doc) si no se asigna un rol.
      // Un admin puede crear un usuario si el rol es 'vendedor'.
      // Un super_admin puede crear cualquier usuario.
      allow create: if (isAuthenticated() && isOwner(userId) && !('rol' in request.resource.data))
                    || (isAdmin() && request.resource.data.rol == 'vendedor')
                    || (isSuperAdmin());
      
      allow update: if isSuperAdmin() || (isAuthenticated() && isOwner(userId) && request.resource.data.rol == resource.data.rol);
      allow delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      allow read: if isAdmin() || (isAuthenticated() && (resource == null || resource.data.vendedorId == request.auth.uid));
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      allow read: if isAdmin() || (isAuthenticated() && (resource == null || resource.data.registradoPor == request.auth.uid));
      allow create: if isAuthenticated();
      allow update: if false; // Nadie puede actualizar una merma
      allow delete: if isSuperAdmin(); // Solo el Super Admin puede borrar el registro
    }
  }
}
