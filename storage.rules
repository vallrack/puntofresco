rules_version = '2';

service firebase.storage {
  // El bucket se llama como el projectId: punto-fresco-f0c35
  match /b/punto-fresco-f0c35/o {
    
    // Las imágenes de los productos son públicas para lectura
    match /products/{userId}/{fileName} {
       allow read: if true;
       
       // La escritura se maneja desde el backend con el SDK de Admin,
       // por lo que no necesitamos reglas de escritura complejas aquí.
       // Dejamos una regla segura por si acaso.
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
