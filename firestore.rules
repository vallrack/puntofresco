rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function getRole() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }
    
    function isVendedor() {
      return isAuthenticated() && getRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÃ“N ---

    match /usuarios/{userId} {
      // Un super_admin puede leer, crear, actualizar y eliminar cualquier usuario.
      // Un usuario normal solo puede leer su propio perfil.
      allow read: if isSuperAdmin() || (isAuthenticated() && isOwner(userId));
      allow write: if isSuperAdmin();
    }

    match /productos/{productoId} {
      // super_admin tiene control total.
      // Otros usuarios autenticados pueden leer.
      // Admins y vendedores pueden actualizar (para ventas).
      // Solo Admins (y super_admin) pueden crear y eliminar.
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      // super_admin tiene control total.
      // Admins pueden listar y obtener cualquier venta.
      // Vendedores solo pueden crear ventas a su nombre y ver las suyas.
      allow get: if isSuperAdmin() || isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      allow list: if isSuperAdmin() || isAdmin() || (isVendedor() && request.query.where[0][2] == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isSuperAdmin() || isAdmin();
    }

    match /compras/{compraId} {
      // Solo super_admin y admins pueden gestionar compras.
      allow read, write: if isSuperAdmin() || isAdmin();
    }

    match /reportes_financieros/{reporteId} {
       // Solo super_admin y admins pueden gestionar reportes.
      allow read, write: if isSuperAdmin() || isAdmin();
    }
    
    match /categorias/{categoriaId} {
      // super_admin tiene control total.
      // Otros usuarios pueden leer. Admins pueden escribir.
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isAdmin();
    }

    match /proveedores/{proveedorId} {
      // super_admin tiene control total.
      // Otros usuarios pueden leer. Admins pueden escribir.
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isAdmin();
    }

    match /mermas/{mermaId} {
      // super_admin tiene control total.
      // Admins pueden leer y registrar mermas.
      allow read: if isSuperAdmin() || isAdmin();
      allow create: if isSuperAdmin() || isAdmin();
      allow update, delete: if false; // No se permite modificar ni borrar para mantener la integridad.
    }
  }
}
