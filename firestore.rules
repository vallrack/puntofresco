rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function getRole() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }
    
    function isVendedor() {
      return isAuthenticated() && getRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÃ“N ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isSuperAdmin());
      allow create: if isSuperAdmin();
      allow update, delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || isVendedor();
      allow delete: if isAdmin();
    }

    match /ventas/{ventaId} {
      allow get: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      allow list: if isAdmin() || (isVendedor() && request.query.where[0][2] == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false; // No se permite actualizar ni eliminar mermas
    }
  }
}
