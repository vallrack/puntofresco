rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isAuthenticated() && (
        getUserData().rol == 'super_admin' || 
        request.auth.token.email == 'vallrack67@gmail.com'
      );
    }

    function isAdmin() {
      return isAuthenticated() && (getUserData().rol == 'admin' || isSuperAdmin());
    }
    
    function isVendedor() {
      return isAuthenticated() && getUserData().rol == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÃ“N ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow create: if (isAuthenticated() && isOwner(userId) && !('rol' in request.resource.data)) || isSuperAdmin();
      allow update: if isSuperAdmin() || (isAuthenticated() && isOwner(userId) && request.resource.data.rol == resource.data.rol);
      allow delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      // Admins pueden editar todo. Vendedores pueden actualizar (para el stock en ventas).
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      allow get: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      allow list: if isAdmin() || (isVendedor() && request.query.where.vendedorId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      allow get: if isAdmin() || (isVendedor() && resource.data.registradoPor == request.auth.uid);
      allow list: if isAdmin() || (isVendedor() && request.query.where.registradoPor == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if isSuperAdmin();
    }
  }
}
