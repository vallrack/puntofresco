rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function getRole() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRole() == 'admin' || getRole() == 'super_admin');
    }
    
    function isVendedor() {
      return isAuthenticated() && getRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Solo un super_admin puede crear nuevos usuarios
      allow create: if isSuperAdmin();
      allow update, delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      // Admins y Vendedores pueden actualizar productos.
      // Los vendedores lo necesitan para actualizar el stock durante una venta.
      allow update: if isAdmin() || isVendedor();
      allow delete: if isAdmin();
    }

    match /ventas/{ventaId} {
      // Los admins leen todo, los vendedores solo su propia venta.
      allow get: if isAdmin() || (isVendedor() && resource.data.vendedorId == request.auth.uid);
      // Los admins listan todo, los vendedores solo pueden listar SUS ventas.
      allow list: if isAdmin() || (isVendedor() && request.query.where[0][2] == request.auth.uid);
      // Cualquier usuario autenticado puede crear una venta si el vendedorId es el suyo.
      // Esto es necesario para que la transacción de venta funcione.
      allow create: if isAuthenticated() && request.resource.data.vendedorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
