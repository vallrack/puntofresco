rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // IMPORTANTE: Además de estas reglas, se debe aplicar una configuración de CORS
    // al bucket para permitir la subida de archivos desde el navegador.
    // Ejecuta el siguiente comando en tu terminal para aplicarla,
    // usando el archivo cors.json en la raíz del proyecto:
    // gcloud storage buckets update gs://<tu-bucket-id> --cors-file=cors.json
    // Reemplaza <tu-bucket-id> con el ID de tu bucket de Storage.
    
    // Permite la lectura pública de todos los archivos.
    match /{allPaths=**} {
      allow read;
    }
    
    // Reglas para las imágenes de productos.
    match /products/{userId}/{allPaths=**} {
       // Permite escrituras solo si el usuario está autenticado
       // y la ruta coincide con su ID de usuario.
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*'); // Solo imágenes
    }
  }
}
