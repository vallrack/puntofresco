rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/usuarios/$(userId)).data;
    }
    
    function getRequestingUserRole() {
        return getUserData(request.auth.uid).rol;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRequestingUserRole() == 'super_admin';
    }

    function isAdmin() {
      return isAuthenticated() && (getRequestingUserRole() == 'admin' || isSuperAdmin());
    }
    
    function isVendedor() {
      return isAuthenticated() && getRequestingUserRole() == 'vendedor';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÃ“N ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      // Un usuario nuevo se puede registrar (crear su propio doc) si no se asigna un rol.
      // Un admin puede crear un usuario si el rol es 'vendedor'.
      // Un super_admin puede crear cualquier usuario.
      allow create: if (isOwner(userId) && !('rol' in request.resource.data))
                    || (isAdmin() && request.resource.data.rol == 'vendedor')
                    || (isSuperAdmin());
      
      // Solo el super_admin puede cambiar el rol de un usuario.
      // Un usuario puede actualizar su propio perfil, pero no su rol.
      allow update: if isSuperAdmin() || (isOwner(userId) && request.resource.data.rol == resource.data.rol);
      allow delete: if isSuperAdmin();
    }

    match /productos/{productoId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isVendedor();
    }

    match /ventas/{ventaId} {
      allow read: if isAdmin() || (isOwner(resource.data.vendedorId));
      allow create: if isOwner(request.resource.data.vendedorId);
      allow update, delete: if isAdmin();
    }

    match /compras/{compraId} {
      allow read, write: if isAdmin();
    }

    match /reportes_financieros/{reporteId} {
      allow read, write: if isAdmin();
    }
    
    match /categorias/{categoriaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /proveedores/{proveedorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mermas/{mermaId} {
      allow read: if isAdmin() || (isOwner(resource.data.registradoPor));
      allow create: if isAuthenticated();
      allow update: if false; // Nadie puede actualizar una merma
      allow delete: if isSuperAdmin(); // Solo el Super Admin puede borrar el registro
    }
  }
}
